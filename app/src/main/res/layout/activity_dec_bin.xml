<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phi.homework_6.DecBin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi giữa thập phân và nhị phân"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/btnDec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đổi thập phân sang nhị phân"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/btnBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đổi nhị phân sang thập phân"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đổi thập phân sang nhị phân"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="25dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thập phân:"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvDec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhị phân:"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"/>
    </GridLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"/>
</LinearLayout>
